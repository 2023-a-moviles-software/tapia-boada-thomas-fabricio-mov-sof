<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/imgBtn_inicio"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:scaleType="centerInside"
        android:tint="#1E477A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.954"
        app:srcCompat="@drawable/house_solid" />

    <ImageButton
        android:id="@+id/imgBtn_pagos"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="#00FFFFFF"
        android:scaleType="centerInside"
        android:tint="#1E477A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toEndOf="@+id/imgBtn_inicio"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.954"
        app:srcCompat="@drawable/dollar_sign_solid" />

    <ImageButton
        android:id="@+id/imgBtn_cartera"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="#00FFFFFF"
        android:scaleType="centerInside"
        android:tint="#1E477A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toEndOf="@+id/imgBtn_pagos"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.954"
        app:srcCompat="@drawable/wallet_solid" />

    <TextView
        android:id="@+id/tv_inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/allerta"
        android:text="Inicio"
        android:textColor="#1E477A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imgBtn_inicio"
        app:layout_constraintStart_toStartOf="@+id/imgBtn_inicio"
        app:layout_constraintTop_toBottomOf="@+id/imgBtn_inicio"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_pagos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/allerta"
        android:text="Pagos"
        android:textColor="#1E477A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imgBtn_pagos"
        app:layout_constraintStart_toStartOf="@+id/imgBtn_pagos"
        app:layout_constraintTop_toBottomOf="@+id/imgBtn_pagos"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_cartera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/allerta"
        android:text="Cartera"
        android:textColor="#1E477A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imgBtn_cartera"
        app:layout_constraintStart_toStartOf="@+id/imgBtn_cartera"
        app:layout_constraintTop_toBottomOf="@+id/imgBtn_cartera"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_enviar"
        android:layout_width="178dp"
        android:layout_height="48dp"
        android:backgroundTint="#FFD140"
        android:fontFamily="@font/allerta"
        android:text="Enviar"
        android:textColor="#1E477A"
        app:layout_constraintBottom_toTopOf="@+id/imgBtn_inicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view4"
        app:layout_constraintVertical_bias="0.66" />

    <Button
        android:id="@+id/btn_solicitar"
        android:layout_width="178dp"
        android:layout_height="48dp"
        android:backgroundTint="#FFD140"
        android:fontFamily="@font/allerta"
        android:text="Solicitar"
        android:textColor="#1E477A"
        app:layout_constraintBottom_toBottomOf="@+id/btn_enviar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_enviar"
        app:layout_constraintTop_toTopOf="@+id/btn_enviar" />

    <View
        android:id="@+id/view4"
        android:layout_width="412dp"
        android:layout_height="724dp"
        android:background="#EFEEEE"
        app:layout_constraintBottom_toTopOf="@+id/imgBtn_pagos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/view4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        app:srcCompat="@drawable/user_solid"
        app:tint="#9A9898" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/view5"
        android:layout_width="390dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintBottom_toBottomOf="@+id/view4"
        app:layout_constraintEnd_toEndOf="@+id/view4"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="@+id/view4"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.008" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_imagenMovimiento"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#EFEEEE"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/view5"
        app:layout_constraintEnd_toEndOf="@+id/view5"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="@+id/view5"
        app:layout_constraintTop_toTopOf="@+id/view5"
        app:layout_constraintVertical_bias="0.483"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        app:srcCompat="@drawable/paypal"
        app:tint="@color/dark_blue" />

    <TextView
        android:id="@+id/t_saldoActual"
        android:layout_width="68dp"
        android:layout_height="32dp"
        android:fontFamily="sans-serif"
        android:text="$0,00"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view5"
        app:layout_constraintEnd_toEndOf="@+id/view5"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toEndOf="@+id/img_imagenMovimiento"
        app:layout_constraintTop_toTopOf="@+id/view5"
        app:layout_constraintVertical_bias="0.312" />

    <TextView
        android:id="@+id/tv_saldo"
        android:layout_width="59dp"
        android:layout_height="17dp"
        android:fontFamily="@font/allerta"
        android:text="Saldo"
        android:textColor="@color/grayP"
        app:layout_constraintBottom_toBottomOf="@+id/view5"
        app:layout_constraintEnd_toEndOf="@+id/t_saldoActual"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/t_saldoActual"
        app:layout_constraintTop_toBottomOf="@+id/t_saldoActual"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/view6"
        android:layout_width="414dp"
        android:layout_height="245dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/view4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view4"
        app:layout_constraintTop_toBottomOf="@+id/view5" />

    <View
        android:id="@+id/view7"
        android:layout_width="416dp"
        android:layout_height="246dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/view4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view6"
        app:layout_constraintVertical_bias="0.125" />

    <TextView
        android:id="@+id/tv_carteraList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/allerta"
        android:text="Cartera"
        android:textColor="@color/grayP"
        app:layout_constraintBottom_toBottomOf="@+id/view6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="@+id/view6"
        app:layout_constraintTop_toTopOf="@+id/view6"
        app:layout_constraintVertical_bias="0.092" />

    <TextView
        android:id="@+id/tv_movimientosRecientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/allerta"
        android:text="Movimientos recientes"
        android:textColor="@color/grayP"
        app:layout_constraintBottom_toBottomOf="@+id/view7"
        app:layout_constraintEnd_toEndOf="@+id/view7"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="@+id/view7"
        app:layout_constraintTop_toTopOf="@+id/view7"
        app:layout_constraintVertical_bias="0.07" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cartera"
        android:layout_width="390dp"
        android:layout_height="178dp"
        app:layout_constraintBottom_toBottomOf="@+id/view6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.74"
        app:layout_constraintStart_toStartOf="@+id/view6"
        app:layout_constraintTop_toBottomOf="@+id/tv_carteraList"
        app:layout_constraintVertical_bias="0.296" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_movimientosRecientes"
        android:layout_width="385dp"
        android:layout_height="175dp"
        app:layout_constraintBottom_toBottomOf="@+id/view7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.60"
        app:layout_constraintStart_toStartOf="@+id/view7"
        app:layout_constraintTop_toBottomOf="@+id/tv_movimientosRecientes"
        app:layout_constraintVertical_bias="0.29" />

</androidx.constraintlayout.widget.ConstraintLayout>